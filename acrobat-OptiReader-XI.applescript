property functionChoice : {"Optimieren & Reader-Aktivierung"}--tell application "Adobe Acrobat Pro"--	set openPDFs to every PDF Window--end tell--tell application "System Events"--	tell its process "AdobeAcrobat"--		set openPDFs to every window--	end tell--end tell--repeat with x from 1 to count openPDFs -- this iterates through all open pdfs--	--repeat with x from (count openPDFs) to 1 by -1 -- this iterates through all open pdfs, backwards--	my optimizePDF()--	my aktivatePDF()--	--close openPDFs's item x--	tell application "Adobe Acrobat Pro"--		close active doc--	end tell--end repeat--my optimizePDF()--my aktivatePDF()my whatFunction()-- •••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••on whatFunction()	set functionChoice to choose from list {"Optimieren", "Optimieren & Reader-Aktivierung", "Nur Reader-Aktivierung"} default items functionChoice with prompt "Funktion wählen:" OK button name "Do it!"		if the functionChoice = {"Optimieren"} then		my optimizePDF()		tell application "Adobe Acrobat Pro"			close active doc		end tell	else if the functionChoice = {"Optimieren & Reader-Aktivierung"} then		my optimizePDF()		my aktivatePDF()		tell application "Adobe Acrobat Pro"			close active doc		end tell	else if the functionChoice = {"Nur Reader-Aktivierung"} then		my aktivatePDF()		tell application "Adobe Acrobat Pro"			close active doc		end tell	end ifend whatFunction-- •••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••on optimizePDF() -- hier die optimierung!	tell application "System Events"		tell its process "AdobeAcrobat"			--------------------------------------------------------------------------			repeat until exists menu bar 1				--			end repeat			tell its menu bar 1				tell its menu "Datei"					tell its menu item "Speichern als..."						tell its menu "Speichern als..."							click menu item "Optimiertes PDF..."						end tell					end tell				end tell			end tell			--------------------------------------------------------------------------			repeat until exists window "PDF-Optimierung"				--			end repeat			tell its window "PDF-Optimierung"				if value of pop up button 1 is "sk-Optimiert" then					click button "OK"				else					display dialog "Es muss das sk-Optimierungs-Preset gewählt sein!!!" buttons "OK" default button "OK"				end if			end tell			--------------------------------------------------------------------------			repeat until exists window "Optimierte speichern unter"				--			end repeat			tell its window "Optimierte speichern unter"				set fileNameVariable to text field 1's value				set value of text field 1 to fileNameVariable --& "-optimized"				tell its button "Speichern"					click				end tell				try					tell sheet 1						click button "Ersetzen"					end tell				end try			end tell			--------------------------------------------------------------------------		end tell	end tellend optimizePDF-- •••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••on aktivatePDF() -- hier kommt die reader aktivierung!	tell application "System Events"		tell its process "AdobeAcrobat"			--------------------------------------------------------------------------			repeat until exists menu bar 1				--			end repeat			tell its menu bar 1				tell its menu bar item "Datei"					tell its menu "Datei"						tell its menu item "Speichern als..."							tell its menu "Speichern als..."								tell its menu item "PDF mit erweiterten Reader-Funktionen"									tell its menu "PDF mit erweiterten Reader-Funktionen"										click menu item "Weitere Werkzeuge aktivieren (mit Ausfüllen und Speichern von Formularen)..."									end tell								end tell							end tell						end tell					end tell				end tell			end tell			--------------------------------------------------------------------------			repeat until exists window "Verwendungsrechte in Adobe Reader aktivieren"				--			end repeat			tell its window "Verwendungsrechte in Adobe Reader aktivieren"				tell its button "Jetzt speichern"					click				end tell			end tell			--------------------------------------------------------------------------			repeat until exists window "Sichern"				--			end repeat			tell window "Sichern"				set fileNameVariable to text field 1's value				set value of text field 1 to fileNameVariable --& "-readeractivated"				tell its button "Sichern"					click				end tell				try					tell sheet 1						click button "Ersetzen"					end tell				end try			end tell			--------------------------------------------------------------------------		end tell	end tellend aktivatePDF-- •••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••••